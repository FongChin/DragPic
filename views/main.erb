<!DOCTYPE HTML>
<html lang="en">
  <head>
    <meta charset="UTF-8">
    <title></title>
    <link href='http://fonts.googleapis.com/css?family=Lobster' rel='stylesheet' type='text/css'>
    <link href='http://fonts.googleapis.com/css?family=Cabin' rel='stylesheet' type='text/css'>
    <link rel="stylesheet" href="/stylesheets/bootstrap.css" />
    <!-- // <script src="/javascripts/bootstrap.min.js" type="text/javascript"></script> -->
    <link rel="stylesheet" href="/stylesheets/style.css" />
    <script type="text/javascript" src="http://code.jquery.com/jquery-1.7.2.min.js"> </script>
    <script type="text/javascript" src="https://js.stripe.com/v1/"></script>
	 <script type="text/javascript">
     Stripe.setPublishableKey('pk_wEshmX7mEF5LDcUyjE4NwoKtr0UCd');
   </script>
   <style type="text/css"></style>
  </head>
  <body>
    <div id="socialButtons">
      <div id="donateButton" class="">Donate</div>
    </div>

    <div class="authButton">
      <div id="fblogout" class="autoElement">Log Out of Facebook</div>
      <div id="goToFB" class="autoElement">FaceBook Pictures</div>
    </div>

    <h1 id="pageTitle">Upload Pictures to Facebook</h1>

    <div class="stepMessage" id="instruction">Drag Pictures in here to create new Album!</div>
    <div class="stepMessage" id="instruction2">Drag Pictures in here to create new Album!</div>

    <div class="" id="albumStep"></div>



    <div id="coverOverlay" class="overlay">
      <div id="statusContainer">
        <h1>Drop your Files</h1>
        <h1>Here!</h1>
      </div>

      <div id="progressBar">
        Uploading status:
        <div id="filesUploadStatus">
          <table id="statusTable"> </table>
        </div>
      </div>

      <div id="newAlbum">
        <h1>Enter Album Description:</h1>
        <fieldset>
          <input id="albumName" type="text" class="input-large newAlbumInput" placeholder="Album Name"/>
        </fieldset>
        <fieldset>
          <textArea id="albumDescription" placeholder="Album Description" class="newAlbumInput"></textArea>
        </fieldset>

        <div id="albumFiles">
          <h2>Files</h2>
          <div id="albumFilesContainer"></div>
        </div>

        <fieldset>
          <span class="btn btn-large" id="createAlbumButton">Create Album</span>
        </fieldset>
      </div>

      <span class="closeOverlay">X Close</span>
    </div>


    <div id="donationOverlay" class="overlay">
      <h1>Thanks for your support!</h1>
      <span class="closeOverlay">X Close</span>
      <form action="/charge" method="POST" id="payment-form">
        <div class="form-row">
          <label>Card Number</label>
          <input type="text" size="20" maxlength="16" autocomplete="on" class="card-number"/>
        </div>
        <div class="form-row">
          <label>CVC</label>
          <input type="text" size="4" maxlength="4" autocomplete="off" class="card-cvc"/>
        </div>
        <div class="form-row">
          <label>Expiration (MM/YYYY)</label>
          <input type="text" size="2" maxlength="2" class="card-expiry-month"/>
          <span> / </span>
          <input type="text" size="4" maxlength="4" class="card-expiry-year"/>
        </div>
        <div class="form-row">
          <label>Amount of Donation ($)</label>
          <input type="text" size="4" autocomplete="on" name="Amount" class="donamount"/>
        </div>
        <button type="submit" class="submit-button">Submit Payment</button>
      </form>

    </div>



    <div id="loginOverlay" class="overlay">
      <div id="loginOverlayInside">
        <h1>Drag Pic 
          <img src="/images/logo.png" alt="" />
        </h1>
        <h3>A simple way to upload your photos to facebook.</h3>
        <p>Just Login Here.</p>
        <img id="fbloginButton" src="https://dl.dropbox.com/u/20617985/fbLogInButton.png" alt="" />
        <p>And Get Started.</p>
      </div>
    </div>

    <div id="fb-root"></div>
    <script src="javascripts/app.js"></script>
    <script type="text/javascript">
        $("#payment-form").submit(function(event) {
          $('.submit-button').attr("disabled", "disabled");

          Stripe.createToken({
            number: $('.card-number').val(),
            cvc: $('.card-cvc').val(),
            exp_month: $('.card-expiry-month').val(),
            exp_year: $('.card-expiry-year').val()
          }, stripeResponseHandler);
          return false;
        });
      function stripeResponseHandler(status, response) {
        if (response.error) {
          // show the errors on the form
          $(".payment-errors").text(response.error.message);
          $(".submit-button").removeAttr("disabled");
        } 
        else {
          var form$ = $("#payment-form");
          // token contains id, last4, and card type
          var token = response['id'];
          // insert the token into the form so it gets submitted to the server
          console.log(status)
          form$.append("<input type='hidden' name='stripeToken' value='" + token + "'/>");
          // and submit
          form$.get(0).submit();
        }
      } 
    </script>
  </body>
</html>
