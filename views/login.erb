  <div id="fb-root"></div>
  <script src="http://code.jquery.com/jquery-1.7.2.min.js" type="text/javascript"></script>
  <script src="http://code.jquery.com/jquery-latest.js"></script>
    
  <script type="text/javascript">
  function mouseOverPic(e){
    fheight=$(".fongpic").height();
    fwidth=$(".fongpic").width();
    fpos=$(".fongpic").position();
    eheight=$(".evapic").height();
    ewidth=$(".evapic").width();
    epos=$(".evapic").position();

    if (e.pageX > fpos.left && e.pageX < fpos.left+fwidth && e.pageY < fpos.top+fheight && e.pageY > fpos.top) {
      $(".fong").css({
          'display': "none",
          'top':fpos.top,
          'left':fpos.left,
          'width':fwidth-110,
          'height':fheight-510,
          })
      $(".fong").show();
    }else{
      $(".fong").hide();
    }

    if (e.pageX > epos.left && e.pageX < epos.left+ewidth && e.pageY < epos.top+eheight && e.pageY > epos.top) {
      $(".eva").css({
          'display': "none",
          'top':epos.top,
          'left':epos.left,
          'width':ewidth-110,
          'height':eheight-510,
          })
      $(".eva").show();
    }else{
      $(".eva").hide();
    }
  };
  
   $(document).mousemove(mouseOverPic);

  $('#fbloginButton').click(function() {
    return FB.login(function(response) {
      if (response.authResponse) {
        window.fbAccessToken = response.authResponse.accessToken;
        return window.location = '/';
      } else {
        return alert("Please Allow");
      }
    }, {
      scope: 'user_photos,friends_photos,publish_stream'
    });
  });

  window.fbAsyncInit = function() {
    FB.init({
      appId: '132631233489866',
      status: true,
      cookie: true,
      xfbml: true
    });
  }; 

  temp = function(d) {
  var id, js, ref;
  js = "";
  id = 'facebook-jssdk';
  ref = d.getElementsByTagName('script')[0];
  if (d.getElementById(id)) {
    return;
  }
  js = d.createElement('script');
  js.id = id;
  js.async = true;
  js.src = "//connect.facebook.net/en_US/all.js";
  ref.parentNode.insertBefore(js, ref);
  return "success";
};

  temp(document);
</script>
</body>
